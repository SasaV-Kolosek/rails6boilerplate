<!-- Begin Page Content -->
<div class="container-fluid">

  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "alert alert-dismissible #{flash_class key}"  do %>
      <%= value %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    <% end %>
  <% end %>

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Posts</h1>
  <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Total: <%= @cms_posts.count %></h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>Publish Date</th>
              <th></th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <td>ID</td>
              <td>Title</td>
              <td>Publish Date</td>
              <td></td>
            </tr>
          </tfoot>
          <tbody>
            <% @cms_posts.each do |cms_post| %>
              <tr>
                <td><%= cms_post.id %>
                <td><%= cms_post.title %>
                <td><%= cms_post.publish_date.strftime('%b %d, %Y') %>
                <td>
                  <%= link_to cms_post_path(cms_post) do %>
                    <i class="fas fa-fw fa-info-circle"></i>
                  <% end %>
                  <%= link_to edit_cms_post_path(cms_post) do %>
                    <i class="fas fa-fw fa-edit"></i>
                  <% end %>
                  <%= link_to cms_post_path(cms_post), method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="fas fa-fw fa-trash-alt"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
<!-- End of Page Content -->
